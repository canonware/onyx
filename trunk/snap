#
# This script does all the necessary work to create a snapshot release of a 
# source tree that is under cvs control.  It also does string substitution 
# for certain tags, such as <Copyright = author>, <License>, and <Version>.
#
#############################################################################

use File::Find; # For find().
use FileHandle; # For file manipulation.
use Getopt::Long;

# Add values to the %COPYRIGHT associative array as shown below to add 
# copyright holder tag keys.  This allows substition of tags that look like:
#
# <Copyright = jasone>
#
$COPYRIGHT{"jasone", 0}
= "Copyright (C) 1996-2005 Jason Evans <jasone\@canonware.com>.";
$COPYRIGHT{"jasone", 1}
= "All rights reserved.";
$COPYRIGHT{"mordor", 0}
= "Copyright (C) 2002 Zeljko Vrba <mordor\@fly.srk.fer.hr>.";
$COPYRIGHT{"mordor", 1}
= "All rights reserved.";
$COPYRIGHT{"nectar", 0}
= "Copyright (C) 2001 Jacques A. Vidrine <nectar\@freebsd.org>.";
$COPYRIGHT{"nectar", 1}
= "All rights reserved.";
$COPYRIGHT{"toshok", 0}
= "Copyright (C) 1999 Chris Toshok <toshok\@hungry.com>.";
$COPYRIGHT{"toshok", 1}
= "All rights reserved.";

# The contents of @LICENSE are substituted for tags that look like:
#
# <License>
#
@LICENSE = 
(
 '',
 'Redistribution and use in source and binary forms, with or without',
 'modification, are permitted provided that the following conditions',
 'are met:',
 '1. Redistributions of source code must retain the above copyright',
 '   notice(s), this list of conditions and the following disclaimer',
 '   unmodified other than the allowable addition of one or more',
 '   copyright notices.',
 '2. Redistributions in binary form must reproduce the above copyright',
 '   notice(s), this list of conditions and the following disclaimer in',
 '   the documentation and/or other materials provided with the',
 '   distribution.',
 '',
 "THIS SOFTWARE IS PROVIDED BY THE COPYRIGHT HOLDER(S) ``AS IS'' AND ANY",
 'EXPRESS OR IMPLIED WARRANTIES, INCLUDING, BUT NOT LIMITED TO, THE',
 'IMPLIED WARRANTIES OF MERCHANTABILITY AND FITNESS FOR A PARTICULAR',
 'PURPOSE ARE DISCLAIMED.  IN NO EVENT SHALL THE COPYRIGHT HOLDER(S) BE',
 'LIABLE FOR ANY DIRECT, INDIRECT, INCIDENTAL, SPECIAL, EXEMPLARY, OR',
 'CONSEQUENTIAL DAMAGES (INCLUDING, BUT NOT LIMITED TO, PROCUREMENT OF',
 'SUBSTITUTE GOODS OR SERVICES; LOSS OF USE, DATA, OR PROFITS; OR',
 'BUSINESS INTERRUPTION) HOWEVER CAUSED AND ON ANY THEORY OF LIABILITY,',
 'WHETHER IN CONTRACT, STRICT LIABILITY, OR TORT (INCLUDING NEGLIGENCE',
 'OR OTHERWISE) ARISING IN ANY WAY OUT OF THE USE OF THIS SOFTWARE,',
 'EVEN IF ADVISED OF THE POSSIBILITY OF SUCH DAMAGE.'
 );

#
# Name to use for a temporary directory during checkout and tagging.
#
$tagdir = "tagdir";

#
# Name to use for a temporary directory during export.
#
$expdir = "expdir";

#
# Parse command-line arguments.
#
Getopt::Long::config("bundling"); # Allow -hv rather than forcing -h -v.

$opt_retval = 
    &GetOptions("c|cvsnotag" => \$opt_cvsnotag,
		"h|help" => \$opt_help,
		"n|noact" => \$opt_noact,
		"v|verbose" => \$opt_verbose,
		"V|version=s%" => \%OPT_VERSION,
		"p|pkgname=s" => \$opt_pkgname,
		"r|root=s" => \$opt_root,
		"m|majorbranch=s" => \$opt_majorbranch,
		"b|branchpoint=s" => \$opt_branchpoint,
		"B|branchtag=s" => \$opt_branchtag,
		"T|tagprefix=s" => \$opt_tagprefix,
		"t|tag=s" => \$opt_tag,
		"f|filetree=s@" => \@OPT_FILETREES
		);

if (($#ARGV >= 0)
    || ($opt_retval == 0)
    || (!defined($opt_root))
    || (!defined($opt_pkgname))
    || (!defined(@OPT_FILETREES))
    || ($opt_help)
    )
{
    &print_usage;
    exit(1);
}

while ($opt_root =~ /\/$/)
{
    if ($opt_verbose)
    {
	print STDERR "Discarding trailing '/' from \"$opt_root\"\n";
    }
    chop $opt_root;
}

$pkgname_base = $opt_pkgname;

if (defined($opt_branchpoint))
{
    $branchpoint_cvs = "-r $opt_branchpoint";
}
else
{
    $branchpoint_cvs = "";
}

if (defined($opt_tag) && !defined($opt_cvsnotag))
{
    if (!defined($opt_tagprefix))
    {
	$opt_tagprefix="";
    }
    $opt_pkgname = $opt_pkgname . "-" . $opt_tag;
    $tag_cvs = $opt_tag;
    $tag_cvs =~ s/\./_/g;
    $tag_cvs = "$opt_tagprefix$tag_cvs";
    $exp_cvs = "-r $tag_cvs";
}
elsif (defined($opt_tag) && defined($opt_cvsnotag))
{
    $opt_pkgname = $opt_pkgname . "-" . $opt_tag;
    $tag_cvs = "";
    if (defined($opt_branchpoint))
    {
	$exp_cvs = $branchpoint_cvs;
    }
    else
    {
	$exp_cvs = "-r HEAD";
    }
}
else
{
    $tag_cvs = "";
    if (defined($opt_branchpoint))
    {
	$exp_cvs = $branchpoint_cvs;
    }
    else
    {
	$exp_cvs = "-r HEAD";
    }
}

if ($opt_verbose)
{
    print STDERR "major branch point : $opt_majorbranch\n";
    print STDERR "branch point       : $opt_branchpoint\n";
    print STDERR "branch tag         : $opt_branchtag\n";
    print STDERR "tag                : $opt_tag\n";
    print STDERR "cvs tag            : $tag_cvs\n";
    print STDERR "Tree root          : $opt_root\n";
    print STDERR "Package name       : $opt_pkgname\n";
}

foreach $dir (@OPT_FILETREES)
{
    while ($dir =~ /\/$/)
    {
	if ($opt_verbose)
	{
	    print STDERR "Discarding trailing '/' from \"$dir\"\n";
	}
	chop $dir;
    }
    @TREES = (@TREES, "$opt_root/$dir");
}

# Remove the tag directory if it is already there.
if ($opt_verbose)
{
    print STDERR "rm -rf $tagdir\n";
}
unless ($opt_noact)
{
    `rm -rf $tagdir`;
}

if (defined($opt_majorbranch))
{
    # Check out.
    if ($opt_verbose)
    {
	print STDERR "cvs co -r $opt_majorbranch -d $tagdir @TREES\n";
    }
    unless ($opt_noact)
    {
	`cvs co -r $opt_majorbranch -d $tagdir @TREES`;
    }

    # Branch.
    if ($opt_verbose)
    {
	print STDERR
	    "cd $tagdir && cvs tag -b $opt_branchpoint\_BP @TREES\n";
    }
    unless ($opt_noact)
    {
	`cd $tagdir && cvs tag -b $opt_branchpoint\_BP @TREES`;
    }

    # Branch.
    if ($opt_verbose)
    {
	print STDERR
	    "cd $tagdir && cvs tag -b $opt_branchpoint @TREES\n";
    }
    unless ($opt_noact)
    {
	`cd $tagdir && cvs tag -b $opt_branchpoint @TREES`;
    }

    # Delete checkout.
    if ($opt_verbose)
    {
	print STDERR "rm -rf $tagdir\n";
    }
    unless ($opt_noact)
    {
	`rm -rf $tagdir`;
    }
}

# Check out on the appropriate tag, if specified.
if ($opt_verbose)
{
    print STDERR "cvs co $branchpoint_cvs -d $tagdir @TREES\n";
}
unless ($opt_noact)
{
    `cvs co $branchpoint_cvs -d $tagdir @TREES`;
}

# Create the branch point and branch tags.
if (defined($opt_branchtag) && !defined($opt_cvsnotag))
{
    if ($opt_verbose)
    {
	print STDERR "cd $tagdir && cvs tag -b $opt_branchtag\_BP @TREES\n";
    }
    unless ($opt_noact)
    {
	`cd $tagdir && cvs tag -b $opt_branchtag\_BP @TREES`;
    }

    if ($opt_verbose)
    {
	print STDERR "cd $tagdir && cvs tag -b $opt_branchtag @TREES\n";
    }
    unless ($opt_noact)
    {
	`cd $tagdir && cvs tag -b $opt_branchtag @TREES`;
    }
}

# Create the release tag.
if (defined($opt_tag) && !defined($opt_cvsnotag))
{
    if ($opt_verbose)
    {
	print STDERR "cd $tagdir && cvs tag $tag_cvs @TREES\n";
    }
    unless ($opt_noact)
    {
	`cd $tagdir && cvs tag -b $tag_cvs @TREES`;
    }
}

# Remove the tag directory.
if ($opt_verbose)
{
    print STDERR "rm -r $tagdir\n";
}
unless ($opt_noact)
{
    `rm -r $tagdir`;
}

# Remove the export directory if it is already there.
if ($opt_verbose)
{
    print STDERR "rm -rf $expdir\n";
}
unless ($opt_noact)
{
    `rm -rf $expdir`;
}

# Export.
if ($opt_verbose)
{
    print STDERR "cvs export $exp_cvs -d $expdir @TREES\n";
}
unless ($opt_noact)
{
    `cvs export $exp_cvs -d $expdir @TREES`;
}

# Find all the files that need the copyright tag expanded.
if ($opt_verbose)
{
    print STDERR "Doing copyright tag substitution:\n";
}
unless ($opt_noact)
{
    finddepth(\&expand_tags, "$expdir/$opt_root");
}

# autogen.
if ($opt_verbose)
{
    print STDERR "cd $expdir/$opt_root && ./autogen.sh --with-docs\n";
}
unless ($opt_noact)
{
    `cd $expdir/$opt_root && ./autogen.sh --with-docs`;
}

# cook release.
if ($opt_verbose)
{
    print STDERR "cd $expdir/$opt_root && cook release\n";
}
unless ($opt_noact)
{
    `cd $expdir/$opt_root && cook release`;

    # Sanity check to make sure documentation got built.
    if (-e "$expdir/$opt_root/doc/latex/$opt_pkgname")
    {
	unless (-e "$expdir/$opt_root/doc/pdf/$opt_pkgname/$opt_pkgname.pdf"
		&& -e
		"$expdir/$opt_root/doc/html/$opt_pkgname/$opt_pkgname.html")
	{
	    print STDERR "'cook release' seems to have failed\n";
	    exit 1;
	}
    }
}
if ($opt_verbose)
{
    print STDERR "cd $expdir/$opt_root && cook distclean\n";
}
unless ($opt_noact)
{
    `cd $expdir/$opt_root && cook distclean`;

    # Sanity check to make sure documentation is still in the tree.
    if (-e "$expdir/$opt_root/doc/latex/$opt_pkgname")
    {
	unless (-e "$expdir/$opt_root/doc/pdf/$opt_pkgname/$opt_pkgname.pdf"
		&& -e
		"$expdir/$opt_root/doc/html/$opt_pkgname/$opt_pkgname.html")
	{
	    print STDERR "'cook release' seems to have failed\n";
	    exit 1;
	}
    }
}

# Move the tree to its final directory name.
if ($opt_verbose)
{
    print STDERR "rm -rf $opt_pkgname\n";
}
unless ($opt_noact)
{
    `rm -rf $opt_pkgname`;
}

if ($opt_verbose)
{
    print STDERR "mv $expdir/$opt_root $opt_pkgname\n";
}
unless ($opt_noact)
{
    `mv $expdir/$opt_root $opt_pkgname`;
}

if ($opt_verbose)
{
    print STDERR "rm -rf $expdir\n";
}
unless ($opt_noact)
{
    `rm -rf $expdir`;
}

# Create the tarball.
if ($opt_verbose)
{
    print STDERR "tar cjf $opt_pkgname.tar.bz2 $opt_pkgname\n";
}
unless ($opt_noact)
{
    `tar cjf $opt_pkgname.tar.bz2 $opt_pkgname`;
}

# Create symlinks to the directory and tarball.
if ($opt_verbose)
{
    print STDERR "rm -f $pkgname_base\-latest\n";
    print STDERR "ln -s $opt_pkgname $pkgname_base\-latest\n";
    print STDERR "rm -f $pkgname_base\-latest.tar.bz2\n";
    print STDERR "ln -s $opt_pkgname.tar.bz2 $pkgname_base\-latest.tar.bz2\n";
}
unless ($opt_noact)
{
    `rm -f $pkgname_base\-latest`;
    `ln -s $opt_pkgname $pkgname_base\-latest`;
    `rm -f $pkgname_base\-latest.tar.bz2`;
    `ln -s $opt_pkgname.tar.bz2 $pkgname_base\-latest.tar.bz2`;
}

# End of main execution.

sub print_usage
{
    print STDERR <<EOF;
$0 usage:
$0 [-chnv --cvsnotag --help --noact --verbose]
       [--majorbranch=<tag> | -m <tag>]
       [--branchpoint=<tag> | -b <tag>]
       [--branchtag=<tag> | -B <tag>]
       [--tag=<tag> | -t <tag>]
       [--tagprefix=<prefix> | -T <prefix>]
       {--version <key>=<version> | -V <key>=<version>}*
       {--pkgname=<name> | -p <pkgname>}
       {--root=<treeroot> | -r <treeroot>}
       {--filetree=<filetree> | -f <filetree>}+
EOF
}

sub expand_tags
{
    my ($name) = $_;
    my ($did_subst) = 0;
    my ($ifh, $ofh);

    if (-r $name
	&& (-w $name)
	&& (-f $name)
	&& (-s $name)
	)
    {
	# Okay, we want to do this file.
	# The filename is in $name.
	# The directory is in $File::Find::dir.
	if ($opt_verbose)
	{
#	    print STDERR "  $File::Find::dir/$name...";
	}

	`cp $name $name.tmp`;
	$ifh = new FileHandle "$name.tmp", "r";
	unless (defined $ifh)
	{
	    print STDERR "Error opening $name.tmp for reading\n";
	    exit(1);
	}
	$ofh = new FileHandle "$name", "w";
	unless (defined $ofh)
	{
	    print STDERR "Error opening $name for writing\n";
	    exit(1);
	}

	while (<$ifh>)
	{
	    if (/^(.*)\<Copyright([ \t]*=[ \t]*([A-Za-z0-9]+))?\>(.*)\n/)
	    {
		$did_subst = 1;
		if (defined($COPYRIGHT{$3, 0}))
		{
		    for ($i = 0; defined($COPYRIGHT{$3, $i}); $i++)
		    {
			print $ofh "$1$COPYRIGHT{$3, $i}$4\n";
		    }
		}
		else
		{
		    for ($i = 0; defined($COPYRIGHT{"jasone", $i}); $i++)
		    {
			print $ofh "$1$COPYRIGHT{\"jasone\", $i}$4\n";
		    }
		}
	    }
	    elsif (/^(.*)\<License\>(.*)\n/)
	    {
		$did_subst = 1;
		foreach (@LICENSE)
		{
		    print $ofh "$1$_$2\n";
		}
	    }
	    elsif (/^(.*)\<Version([ \t]*=[ \t]*([A-Za-z0-9]+))?\>(.*)\n/)
	    {
		$did_subst = 1;
		if (defined($OPT_VERSION{$3}))
		{
		    print $ofh "$1$OPT_VERSION{$3}$4\n";
		}
		elsif ($3 eq "")
		{
		    print $ofh "$1$opt_tag$4\n";
		}
		else
		{
		    print $ofh "$_";
		    print STDERR "Missing Version tag value for \"$3\""
			. " in $File::Find::dir/$name\n";
		}
	    }
	    else
	    {
		print $ofh "$_";
	    }
	}
	
	$ifh->close;
	$ofh->close;

	`rm $name.tmp`;

	if ($opt_verbose)
	{
	    if ($did_subst)
	    {
#		print STDERR "yes\n";
	    }
	    else
	    {
#		print STDERR "no\n";
	    }
	}
    }
    # It seems that this code never gets hit because 'cvs export' doesn't 
    # export empty directories.  
    elsif (-d $name)
    {
	# Try to delete the directory (only succeeds if the directory is empty,
	# which is what we want.
	$rmdir_result = rmdir $name;
	if ($opt_verbose && ($rmdir_result == 1))
	{
	    print STDERR "rmdir $name\n";
	}
    }
}
