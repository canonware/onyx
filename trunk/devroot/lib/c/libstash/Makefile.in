	rm -f $(LOBJS) $(LOBJS:.lo=.o)
	rm -f $(PTESTS)
	rm -f $(ALLDIRS:=/*~) bin/*~
	rm -f $(ALLDIRS:=/*.bak)
	rm -f $(ALLDIRS:=/*.BAK)
	rm -f $(ALLDIRS:=/*.out)
	rm -f $(ALLDIRS:=/core)
	rm -f $(ALLDIRS:=/*.core)
	rm -f $(ALLDIRS:=/*.diff)

#	rm -f $(OBJS)
#	rm -f $(OBJS:.o=.d)
#	rm -f $(EXECS)
#	rm -f $(BTESTS)
#	rm -f $(BTESTS:=.o)
#	rm -f $(BTESTS:=.d)

distclean: clean
	rm -f "#"*"#"
	rm -f $(ALLDIRS:=/"#"*"#")
	rm -f Makefile Makefile.common
	rm -f config.cache config.log config.status libhungry.h
	rm -f TAGS
	rm -rf .libs
	rm -f $(LIBS)
	rm -f $(PMERGE)
	rm -f $(PSTUB)

#	rm -f $(TARGETS)
#	rm -f $(ALLDIRS:=/Makefile.mk)

etags: $(SRCS) $(INCS) $(LSRCS) $(LINCS)
