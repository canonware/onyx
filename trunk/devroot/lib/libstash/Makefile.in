#
# File lists.
#

# Include files that _are_ installed.
INCS := stash_incs.h bhp.h br.h brblk.h brbs.h brmap.h buf.h dbg.h \
	glob.h jt.h list.h locks.h log.h matrix.h mem.h oh.h res.h \
	sock.h socks.h thread.h

# Include files that are _not_ installed.
PRIV_INCS := bhp_priv.h br_priv.h brbs_priv.h \
	dbg_priv.h jt_priv.h list_priv.h \
	locks_priv.h log_priv.h mem_priv.h oh_priv.h res_priv.h

# Source files.
SRCS := bhp.c br.c brblk.c brbs.c brmap.c buf.c dbg.c \
	glob.c jt.c list.c locks.c log.c matrix.c mem.c oh.c res.c sock.c \
	socks.c thread.c zt.c

# Simple tests.  Output is diff'ed with the expected (.expect file) output.
CTESTS := c19980411a.c c19980412a.c c19980419a.c c19980430a.c \
	c19980627a.c c19980630a.c c19980731a.c

# Perl scripts that drive the BTESTS.
PTESTS := p19980701a.pl.in p19980828a.pl.in

# Backend test programs that are driven by the PTESTS.
BTESTS := b19980828a.c

# Munge the filename lists so that they are prefixed by the directory they're
# in, relative to @top_srcdir@.  Also, convert the test names to their final
# names.
INCS := $(addprefix include/,$(INCS))
PRIV_INCS := $(addprefix include/,$(P_INCS))
SRCS := $(addprefix src/,$(SRCS))
CTESTS := $(addprefix test/,$(CTESTS:.c=))
BTESTS := $(addprefix test/,$(BTESTS:.c=))
PTESTS := $(addprefix test/,$(PTESTS:.pl.in=.pl))

#
# Library names.
#

LIB := stash

LIB_REV := 0.0

LIB_ST_D := lib/lib$(strip $(LIB))_d.a
LIB_SH_D := lib/lib$(strip $(LIB))_d.so.$(strip $(LIB_REV))
LIB_ST_O := lib/lib$(strip $(LIB)).a
LIB_SH_O := lib/lib$(strip $(LIB)).so.$(strip $(LIB_REV))
LIB_ST_P := lib/lib$(strip $(LIB))_p.a
LIB_SH_P := lib/lib$(strip $(LIB))_p.so.$(strip $(LIB_REV))

#
# Standard definitions.
#

SHELL   := /bin/sh
CC	:= @CC@
AR	:= @AR@
RANLIB	:= @RANLIB@
INSTALL	:= @INSTALL@
CAT     := @CAT@
PERL    := @PERL@
BASENAME:= @BASENAME@
DIFF    := @DIFF@
PMERGE  := @top_srcdir@/bin/pmerge
PSTUB   := @top_srcdir@/bin/pstub

#
# Compiler flags.
#

LIBPATH := -L@top_srcdir@/lib
EXTRALIBS := @LIBS@
INCPATH := -I@top_srcdir@ -I@top_srcdir@/include

DEFINES := @DEFS@
ST_DEFINES := 
SH_DEFINES := 
D_DEFINES := -D_STASH_DBG
O_DEFINES := 
P_DEFINES := 
TEST_DEFINES := -D_STASH_DEBUG

#CFLAGS  := @CFLAGS@
CFLAGS := -Wall -pipe
ST_CFLAGS := 
SH_CFLAGS := -fPIC -DPIC
D_CFLAGS := -g3
O_CFLAGS := -O3
P_CFLAGS := -O3 -pg

# Clear out all vpaths, then set just one (default vpath) for the main build
# directory.
vpath
vpath % .

# Need this here since the includes have dependencies in them, but there's
# stuff in the includes that we need to see before using $(TARGETS).
all : default

#
# Common rules
#

.SUFFIXES :
.SUFFIXES : .a .c .h .o .o_st_d .o_sh_d .o_st_o .o_sh_o .o_st_p .o_sh_p \
	.d_st_d .d_sh_d .d_st_o .d_sh_o .d_st_p .d_sh_p .pl.in .pl

#
# Build rules.
#

# This rule is used to build the tests.
% : %.c $(LIB_ST_D)
	$(CC) $(CFLAGS) $(ST_CFLAGS) $(D_CFLAGS) $(INCPATH) $(DEFINES) $(TEST_DEFINES) -c $< -o $(@:=.o)
	$(CC) -o $@ $(@:=.o) $(LIBPATH) -static -l$(strip $(LIB))_d -dynamic $(EXTRALIBS)

obj/st_d/%.o_st_d : src/%.c
	$(CC) $(INCPATH) $(CFLAGS) $(ST_CFLAGS) $(D_CFLAGS) $(DEFINES) $(ST_DEFINES) $(D_DEFINES) -c $< -o $@

obj/sh_d/%.o_sh_d : src/%.c
	$(CC) $(INCPATH) $(CFLAGS) $(SH_CFLAGS) $(D_CFLAGS) $(DEFINES) $(SH_DEFINES) $(D_DEFINES) -c $< -o $@

obj/st_o/%.o_st_o : src/%.c
	$(CC) $(INCPATH) $(CFLAGS) $(ST_CFLAGS) $(O_CFLAGS) $(DEFINES) $(ST_DEFINES) $(O_DEFINES) -c $< -o $@		

obj/sh_o/%.o_sh_o : src/%.c
	$(CC) $(INCPATH) $(CFLAGS) $(SH_CFLAGS) $(O_CFLAGS) $(DEFINES) $(SH_DEFINES) $(O_DEFINES) -c $< -o $@

obj/st_p/%.o_st_p : src/%.c
	$(CC) $(INCPATH) $(CFLAGS) $(ST_CFLAGS) $(P_CFLAGS) $(DEFINES) $(ST_DEFINES) $(P_DEFINES) -c $< -o $@

obj/sh_p/%.o_sh_p : src/%.c
	$(CC) $(INCPATH) $(CFLAGS) $(SH_CFLAGS) $(P_CFLAGS) $(DEFINES) $(SH_DEFINES) $(P_DEFINES) -c $< -o $@

# Rule for dependency file creation
%.d : %.c
	$(SHELL) -ec "$(CC) -M $(DEFINES) $(ST_DEFINES) $(D_DEFINES) $(INCPATH) $< | sed \"s/\($(subst /,\/,$(notdir $(basename $@)))\)\.o\([ :]*\)/$(subst /,\/,$(strip $(dir $@)))\1.o $(subst /,\/,$(strip $(dir $@)))\1.d \2/g\" > $@"

obj/st_d/%.d_st_d : src/%.c
	$(SHELL) -ec "$(CC) -M $(DEFINES) $(ST_DEFINES) $(D_DEFINES) $(INCPATH) $< | sed \"s/\($(subst /,\/,$(notdir $(basename $@)))\)\.o\([ :]*\)/$(subst /,\/,$(strip $(dir $@)))\1.o_st_d $(subst /,\/,$(strip $(dir $@)))\1.d_st_d \2/g\" > $@"

obj/sh_d/%.d_sh_d : src/%.c
	$(SHELL) -ec "$(CC) -M $(DEFINES) $(SH_DEFINES) $(D_DEFINES) $(INCPATH) $< | sed \"s/\($(subst /,\/,$(notdir $(basename $@)))\)\.o\([ :]*\)/$(subst /,\/,$(strip $(dir $@)))\1.o_sh_d $(subst /,\/,$(strip $(dir $@)))\1.d_sh_d \2/g\" > $@"

obj/st_o/%.d_st_o : src/%.c
	$(SHELL) -ec "$(CC) -M $(DEFINES) $(ST_DEFINES) $(O_DEFINES) $(INCPATH) $< | sed \"s/\($(subst /,\/,$(notdir $(basename $@)))\)\.o\([ :]*\)/$(subst /,\/,$(strip $(dir $@)))\1.o_st_o $(subst /,\/,$(strip $(dir $@)))\1.d_st_o \2/g\" > $@"

obj/sh_o/%.d_sh_o : src/%.c
	$(SHELL) -ec "$(CC) -M $(DEFINES) $(SH_DEFINES) $(O_DEFINES) $(INCPATH) $< | sed \"s/\($(subst /,\/,$(notdir $(basename $@)))\)\.o\([ :]*\)/$(subst /,\/,$(strip $(dir $@)))\1.o_sh_o $(subst /,\/,$(strip $(dir $@)))\1.d_sh_o \2/g\" > $@"

obj/st_p/%.d_st_p : src/%.c
	$(SHELL) -ec "$(CC) -M $(DEFINES) $(ST_DEFINES) $(P_DEFINES) $(INCPATH) $< | sed \"s/\($(subst /,\/,$(notdir $(basename $@)))\)\.o\([ :]*\)/$(subst /,\/,$(strip $(dir $@)))\1.o_st_p $(subst /,\/,$(strip $(dir $@)))\1.d_st_p \2/g\" > $@"

obj/sh_p/%.d_sh_p : src/%.c
	$(SHELL) -ec "$(CC) -M $(DEFINES) $(SH_DEFINES) $(P_DEFINES) $(INCPATH) $< | sed \"s/\($(subst /,\/,$(notdir $(basename $@)))\)\.o\([ :]*\)/$(subst /,\/,$(strip $(dir $@)))\1.o_sh_p $(subst /,\/,$(strip $(dir $@)))\1.d_sh_p \2/g\" > $@"

.pl.in.pl :
	$(PERL) -w $(PMERGE) $(PERL) $(PSTUB) $< $@

#
# Dependencies (not rules).
#

include $(SRCS:src/%.c=obj/st_d/%.d_st_d)
include $(SRCS:src/%.c=obj/sh_d/%.d_sh_d)
include $(SRCS:src/%.c=obj/st_o/%.d_st_o)
include $(SRCS:src/%.c=obj/sh_o/%.d_sh_o)
include $(SRCS:src/%.c=obj/st_p/%.d_st_p)
include $(SRCS:src/%.c=obj/sh_p/%.d_sh_p)
include $(CTESTS:=.d)
include $(BTESTS:=.d)

$(LIB_ST_D) : $(SRCS:src/%.c=obj/st_d/%.o_st_d)
	$(AR) cru $@ $?
	$(RANLIB) $@

$(LIB_SH_D) : $(SRCS:src/%.c=obj/sh_d/%.o_sh_d)
	$(CC) -shared -o $@ $^

$(LIB_ST_O) : $(SRCS:src/%.c=obj/st_o/%.o_st_o)
	$(AR) cru $@ $?
	$(RANLIB) $@

$(LIB_SH_O) : $(SRCS:src/%.c=obj/sh_o/%.o_sh_o)
	$(CC) -shared -o $@ $^

$(LIB_ST_P) : $(SRCS:src/%.c=obj/st_p/%.o_st_p)
	$(AR) cru $@ $?
	$(RANLIB) $@

$(LIB_SH_P) : $(SRCS:src/%.c=obj/sh_p/%.o_sh_p)
	$(CC) -shared -o $@ $^

stat_dbg : $(LIB_ST_D)
shar_dbg : $(LIB_SH_D)
stat_opt : $(LIB_ST_O)
shar_opt : $(LIB_SH_O)
stat_prof : $(LIB_ST_P)
shar_prof : $(LIB_SH_P)

FORCE :

#
# user 'make'ables
#

default : stat_dbg shar_dbg stat_opt shar_opt stat_prof shar_prof

check : $(CTESTS) $(PTESTS) $(BTESTS)
	@$(SHELL) -c \
	'echo Running regression tests: ; \
	echo "---------------------------------------------" ;\
	for i in $(PTESTS); do \
	echo -n "$$i..."; \
	./$$i; \
	done; \
	for i in $(CTESTS); do \
	echo -n "$$i..."; \
	./$$i > ./$$i.out 2>&1; \
	$(DIFF) $$i.out $$i.expect > $$i.diff ; \
	if [ -s $$i.diff ] ; then \
	echo "failed. ****************" ; \
	else \
	echo "passed." ; \
	rm $$i.diff ; \
	fi \
	done ; \
	echo "---------------------------------------------" ;\
	echo ;\
	echo The following regression tests failed: ; \
	echo "---------------------------------------------" ;\
	for i in `find ./test -print | grep "\.diff$$"`; do \
	echo `echo $$i | sed "s/\.\/\(.*\)\.diff/\1/g`; \
	done; \
	echo "---------------------------------------------" \
	'

install : install_stat_dbg install_shar_dbg install_stat_opt \
	install_shar_opt install_stat_prof install_shar_prof

install_common : 
	$(SHELL) -c \
	'@INSTALL@ -d @prefix@/lib; \
	@INSTALL@ -d @prefix@/include/libstash; \
	for i in libstash.h $(INCS); do \
	@INSTALL@ $$i @prefix@/include/libstash/; \
	done; \
	'

install_stat_dbg : stat_dbg install_common
	@INSTALL@ -d @prefix@/lib
	@INSTALL@ $(LIB_ST_D) @prefix@/lib

install_shar_dbg : shar_dbg install_common
	@INSTALL@ -d @prefix@/lib
	@INSTALL@ $(LIB_SH_D) @prefix@/lib

install_stat_opt : stat_opt install_common
	@INSTALL@ -d @prefix@/lib
	@INSTALL@ $(LIB_ST_O) @prefix@/lib

install_shar_opt : shar_opt install_common
	@INSTALL@ -d @prefix@/lib
	@INSTALL@ $(LIB_SH_O) @prefix@/lib

install_stat_prof : stat_prof install_common
	@INSTALL@ -d @prefix@/lib
	@INSTALL@ $(LIB_ST_P) @prefix@/lib

install_shar_prof : shar_prof install_common
	@INSTALL@ -d @prefix@/lib
	@INSTALL@ $(LIB_SH_P) @prefix@/lib

uninstall :
	rm -f @prefix@/lib/lib$(strip $(LIB))*
	rm -rf @prefix@/include/libstash

doc :

clean : FORCE
	rm -f *~ */*~
	rm -f *.bak *.BAK
	rm -f core test/core *.core test/*.core
	rm -f test/*.o test/*.out test/*.diff
	rm -f $(CTESTS) $(PTESTS) $(BTESTS)
	rm -f obj/*/*.[dop]*
	rm -f lib/lib*
	rm -f test/*.d
	rm -f test/*.diff

distclean : clean
	rm -f "#"*"#" bin/"#"*"#" src/"#"*"#" include/"#"*"#"
	rm -f Makefile
	rm -f config.cache config.log config.status libstash.h
	rm -f TAGS
	rm -f $(PMERGE)
	rm -f $(PSTUB)

etags : $(INCS) $(PRIV_INCS) $(SRCS)
	@ETAGS@ $(INCS) $(PRIV_INCS) $(SRCS)
