/* Include generated dependency files. */
#include-cooked [glob @objroot@/lib/libedit/src/"*.d_*"]
#include-cooked [glob @objroot@/lib/libedit/test/"*.d_*"]

/*
 * File lists.
 */

/* Source files. */
LIBEDIT_SRCS = chared.c common.c edit.c emacs.c hist.c history.c key.c map.c
             parse.c prompt.c read.c refresh.c search.c term.c
             tokenizer.c tty.c vi.c fcns.c help.c;
LIBEDIT_SRCS = [addprefix @srcroot@/lib/libedit/src/ [LIBEDIT_SRCS]];

/* Libraries. */
LIBEDIT_A = @objroot@/lib/libedit/lib/libedit.a;

LDFLAGS = [LDFLAGS] -L@objroot@/lib/libedit/lib;

/*
 * User cook'ables.
 */

libedit_libs_a : [LIBEDIT_A];
libedit_libs_s : ;
libedit : libedit_libs_a;

libedit_libs_bootstrap :
{
}

libedit_libs_tests :
{
}

libedit_libs_check :
{
}

libedit_libs_check_update :
{
}

libedit_libs_install_i libedit_libs_install_a libedit_libs_install_s
libedit_libs_install :
{
}

libedit_libs_uninstall :
{
}

libedit_libs_clean :
{
  rm -f [fromto @srcroot@/%0%.c @objroot@/%0%.d_a [LIBEDIT_SRCS]];
  rm -f [fromto @srcroot@/%0%.c @objroot@/%0%.o_a [LIBEDIT_SRCS]];
  rm -f [LIBEDIT_A];
}

libedit_libs_distclean :
{
}

/*
 * Various flags.
 */

CPPFLAGS = [CPPFLAGS] -I@srcroot@/lib/libedit/include
                      -I@objroot@/lib/libedit/include/libedit;

/*
 * Dependencies.
 */

[LIBEDIT_A] : [fromto @srcroot@/%0%.c @objroot@/%0%.o_a [LIBEDIT_SRCS]]
  set mkdir
{
  @AR@ cru [target] [younger];
  @RANLIB@ [target];
}
