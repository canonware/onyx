#!/usr/bin/env onyx

# Load the clopt module.
$modclopt mclass:singleton:load

# Subclass clopt and add option handlers.
$myopts clopt <
><
    #class#
    #- new #instance
    $new {
        ;rnew
        #instance
    } bind

    #instance#
    #- `--foo?' -
    `--foo?' {
	`--foo --> ' print
	;flag_get 1 sprint
    } bind
> cdef

argv myopts:new:parse
